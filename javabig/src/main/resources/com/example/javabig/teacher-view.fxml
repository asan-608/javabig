<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javabig.TeacherController">

    <!-- 在根节点下统一定义 ToggleGroup -->
    <fx:define>
        <ToggleGroup fx:id="optionsToggleGroup"/>
    </fx:define>

    <!-- 主 TabPane -->
    <children>
        <TabPane fx:id="mainTabPane"
                 prefWidth="800"
                 prefHeight="600"
                 AnchorPane.topAnchor="0"
                 AnchorPane.leftAnchor="0"
                 AnchorPane.rightAnchor="0"
                 AnchorPane.bottomAnchor="0">
            <tabs>

                <!-- 题库管理（占位，后续可放题目列表、搜索等） -->
                <Tab text="题库管理">
                    <AnchorPane>
                        <children>
                            <Label text="这里显示已有题目列表，支持编辑/删除"
                                   AnchorPane.topAnchor="10"
                                   AnchorPane.leftAnchor="10"/>
                        </children>
                    </AnchorPane>
                </Tab>

                <!-- 添加选择题 -->
                <Tab fx:id="addChoiceTab" text="添加选择题">
                    <AnchorPane>
                        <children>
                            <VBox spacing="10"
                                  AnchorPane.topAnchor="10"
                                  AnchorPane.leftAnchor="10"
                                  AnchorPane.rightAnchor="10"
                                  AnchorPane.bottomAnchor="10">

                                <!-- 题干 -->
                                <Label text="题干：" />
                                <TextArea fx:id="questionContentArea"
                                          prefRowCount="4"
                                          promptText="请输入题干"/>

                                <!-- 选项 A–D -->
                                <Label text="选项：" />
                                <HBox spacing="20">

                                    <VBox spacing="5">
                                        <RadioButton fx:id="optionARadio"
                                                     toggleGroup="$optionsToggleGroup"
                                                     userData="0"
                                                     text="A"/>
                                        <TextField fx:id="optionATextField"
                                                   promptText="选项 A"/>
                                    </VBox>
                                    <VBox spacing="5">
                                        <RadioButton fx:id="optionBRadio"
                                                     toggleGroup="$optionsToggleGroup"
                                                     userData="1"
                                                     text="B"/>
                                        <TextField fx:id="optionBTextField"
                                                   promptText="选项 B"/>
                                    </VBox>
                                    <VBox spacing="5">
                                        <RadioButton fx:id="optionCRadio"
                                                     toggleGroup="$optionsToggleGroup"
                                                     userData="2"
                                                     text="C"/>
                                        <TextField fx:id="optionCTextField"
                                                   promptText="选项 C"/>
                                    </VBox>
                                    <VBox spacing="5">
                                        <RadioButton fx:id="optionDRadio"
                                                     toggleGroup="$optionsToggleGroup"
                                                     userData="3"
                                                     text="D"/>
                                        <TextField fx:id="optionDTextField"
                                                   promptText="选项 D"/>
                                    </VBox>
                                </HBox>

                                <!-- 难度 -->
                                <Label text="难度：" />
                                <ChoiceBox fx:id="difficultyChoiceBox"/>

                                <!-- 提交 -->
                                <Button text="添加"
                                        onAction="#handleAddChoiceQuestion"
                                        maxWidth="100"/>
                            </VBox>
                        </children>
                    </AnchorPane>
                </Tab>

                <!-- 未来可继续添加：多选题/填空题/判断题等 -->
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
